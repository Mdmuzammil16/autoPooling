<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/locationDetailsContainer"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@android:color/white"    android:elevation="4dp"    android:orientation="vertical"    android:padding="16dp">    <!-- Latitude -->    <TextView        android:id="@+id/latitudeText"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="8dp"        android:text="Latitude: 0.0"        android:textColor="@android:color/black"        android:textSize="16sp" />    <!-- Longitude -->    <TextView        android:id="@+id/longitudeText"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="8dp"        android:text="Longitude: 0.0"        android:textColor="@android:color/black"        android:textSize="16sp" />    <!-- Address -->    <TextView        android:id="@+id/addressText"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="8dp"        android:text="Address: Not Available"        android:textColor="@android:color/black"        android:textSize="16sp" /></LinearLayout>