<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/create_pooling_bg"
    android:layout_height="match_parent"
    tools:context=".CreatePool">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:background="@drawable/white_bg"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaving From" />

            <RadioButton
                android:id="@+id/radio_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Going To" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/baseline_calendar_month_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/outline_person_outline_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <Spinner
                android:id="@+id/passengerCountSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
       <TextView
           android:id="@+id/searchBtn"
           android:layout_gravity="bottom"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Search"
           android:textColor="@color/white"
           android:textSize="16dp"
           android:minHeight="50dp"
           android:background="@drawable/bottom_curve_btn_bg"
           android:backgroundTint="@color/primery"/>
    </LinearLayout>

</LinearLayout>